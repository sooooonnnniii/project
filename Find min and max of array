#include <stdio.h>

int main()
{
    int arr[100];
  int i,j,n,ctr,min=0,max=0;
  printf("Enter te number of elements in an array:");
  scanf("%d", &n);
  for(i=0; i<n; i++){
      printf("the element %d is:", i);
      scanf("%d", &arr[i]);
  }
  min =arr[0]; max=arr[0];
  for (i=0; i<n; i++){
      if(arr[i]<min){
          min = arr[i];
      }
  }
  for (i=0; i<n; i++){
      if(arr[i]>max){
          max = arr[i];
      }
  }
  printf("min num of array is %d \n", min);
   printf("max num of array is %d", max);
  


    return 0;
}
